<?xml version="1.0" encoding="utf-8"?>
<!--andorid:shape se usa para ver que forma quiero usar-->
<!--el padding es el espacio entre el contenido y el borde del elemento -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"

    android:shape="rectangle"
    android:padding="10dp">

    <!-- La etiqueta android:color sirve para poner un color  -->
        <solid android:color="@color/grey_light"/>

    <!--  La etiqueta stroke sirve para hacer pequeÃ±as lineas en un campo  -->
    <stroke android:width="1dp" android:color="@color/blue_light"/>

    <!---cornes se usa para esablecer bordes redondeados -->
    <corners android:radius="5dp"/>
</shape>